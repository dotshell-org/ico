{
  "name": "ico",
  "private": true,
  "version": "0.1.0",
  "description": "An open source, modern accounting software.",
  "author": "Dotshell",
  "type": "module",
  "scripts": {
    "build:main": "tsc --project electron/tsconfig.main.json",
    "build:renderer": "vite build --mode production",
    "build:ci": "npm run build:renderer && npm run build:main",
    "dist": "npm run build:ci && npm run build:electron",
    "build:electron": "node build-electron.cjs",
    "build": "npm run build:renderer && npm run build:electron",
    "build:linux": "npm run build:renderer && electron-builder --linux",
    "build:win": "npm run build:renderer && electron-builder --win",
    "build:mac": "npm run build:renderer && electron-builder --mac",
    "dev": "vite",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "electron-builder install-app-deps",
    "generate-electron-build": "npm run build:renderer && npm run build:electron"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.21.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@heroicons/react": "^2.2.0",
    "@mui/x-charts": "^8.0.0",
    "better-sqlite3": "^11.9.1",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.13",
    "dompurify": "^3.2.6",
    "framer-motion": "^12.7.4",
    "i18next": "^25.0.1",
    "i18next-browser-languagedetector": "^8.0.5",
    "i18next-electron-fs-backend": "^3.0.3",
    "i18next-http-backend": "^3.0.2",
    "mongodb": "^6.15.0",
    "multer": "^2.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.5.2",
    "react-router-dom": "^7.6.1",
    "recharts": "^2.15.3",
    "tesseract.js": "^6.0.1"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/mongodb": "^4.0.7",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.5",
    "@types/react-i18next": "^8.1.0",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "postcss": "^8.5.4",
    "postcss-loader": "^8.1.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "main": "dist-electron/main.js"
}