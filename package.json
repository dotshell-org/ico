{
  "name": "glome",
  "private": true,
  "version": "0.1.0",
  "description": "An open source, modern accounting software.",
  "author": "Dotshell",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "electron-builder install-app-deps",
    "build:renderer": "vite build --mode production",
    "build:electron": "electron-builder --config.asar=true",
    "build": "npm run build:renderer && npm run build:electron",
    "build:win": "npm run build:renderer && electron-builder --win --config.asar=true"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.3.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@heroicons/react": "^2.2.0",
    "@mui/x-charts": "^7.27.0",
    "better-sqlite3": "^11.8.1",
    "dayjs": "^1.11.13",
    "framer-motion": "^11.17.0",
    "i18next": "^24.2.1",
    "i18next-browser-languagedetector": "^8.0.3",
    "i18next-electron-fs-backend": "^3.0.3",
    "i18next-http-backend": "^3.0.1",
    "mongodb": "^6.13.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^15.4.0",
    "react-router-dom": "^7.1.1",
    "recharts": "^2.15.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.1",
    "@types/better-sqlite3": "^7.6.12",
    "@types/mongodb": "^4.0.7",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/react-i18next": "^7.8.3",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.20",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss-loader": "^8.1.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.example.glome",
    "productName": "Glome",
    "win": {
      "target": "nsis",
      "icon": "build/icons/win/icon.ico"
    },
    "buildDependenciesFromSource": true
  }
}
